	select SND_SOC_GENERIC_DMAENGINE_PCM
	select SND_SOC_SUNXI_PCM
	select SND_SOC_SUNXI_MACH
	select SND_SOC_SUNXI_COMMON
	depends on ARCH_SUN50IW10 \
		|| ARCH_SUN50IW9  \
		|| ARCH_SUN55IW3  \
		|| ARCH_SUN8IW18  \
		|| ARCH_SUN8IW21  \
		|| ARCH_SUN55IW6
	help
	  Select Y or M to support DMIC Module in Allwinner SoCs.

